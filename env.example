# Database Configuration
# Copia este archivo como .env y ajusta los valores según tu configuración

DATABASE_URL="mysql://root:@localhost:3306/megatienda"

# Next.js Configuration
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# JWT Configuration - SISTEMA DE SESIONES SEGURO
# Genera estas claves usando: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="tu-jwt-secret-super-seguro-de-64-caracteres-aqui"
JWT_REFRESH_SECRET="tu-jwt-refresh-secret-super-seguro-de-64-caracteres-aqui"

# Session Configuration
SESSION_ACCESS_TOKEN_EXPIRY="900"  # 15 minutos en segundos
SESSION_REFRESH_TOKEN_EXPIRY="604800"  # 7 días en segundos

# Security Configuration
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW="900000"  # 15 minutos en milisegundos
RATE_LIMIT_MAX_REQUESTS="100"  # Máximo 100 requests por ventana

# Cloudinary Configuration (opcional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your-upload-preset"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

